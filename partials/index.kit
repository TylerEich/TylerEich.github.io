<!DOCTYPE html>
<html>
  <!-- @import head.kit -->

  <body>
    <!-- @import svg-symbols.kit -->
    
    <header class="hide">
      <nav class="animate">
        <a class="animate" href="#">
          <img id="logo" src="images/logo.svg">
        </a>
        <a class="link no-touch" href="#websites">Websites</a>
        <a class="link no-touch" href="#code">Code</a>
        <a class="link no-touch" href="#me">Me</a>
      </nav>
    </header>
    
    <div id="landing">
      <section id="greeting">
        <span id="hello-world">&#x200B;</span>
        <span id="tyler-eich" class="hide">I’m Tyler Eich</span>
      </section>
      <div class="ellipse"></div>
    </div>

    <main id="content">
      <section id="websites">
        <h1 class="animate">
          Websites
        </h1>

        <h2 class="animate">
          I make them
        </h2>

        <section class="grid">

          <div class="card grid-item animate">
            <svg class="icon">
              <use xlink:href="#responsive">
            </svg>
            <p class="subtext">
              Responsive
            </p>
          </div>

          <div class="card grid-item animate">
            <svg class="icon">
              <use xlink:href="#stopwatch">
            </svg>
            <p class="subtext">
              Fast
            </p>
          </div>

          <div class="card grid-item animate">
            <svg class="icon">
              <use xlink:href="#clean">
            </svg>
            <p class="subtext">
              Clean
            </p>
          </div>

          <div class="card grid-item animate">
            <svg class="icon">
              <use xlink:href="#optimized">
            </svg>
            <p class="subtext">
              Optimized
            </p>
          </div>

        </section>

      </section><!-- #websites -->

      <section id="code">
        <h1 class="animate">
          Code
        </h1>
        <h2 class="animate">
          I do that too
        </h2>

        <section class="grid">

          <div class="card grid-item animate">
            <svg class="icon">
              <use xlink:href="#js">
            </svg>
            <p class="subtext">
              JavaScript
            </p>
          </div>

          <div class="card grid-item animate">
            <svg class="icon">
              <use xlink:href="#angular">
            </svg>
            <p class="subtext">
              Angular
            </p>
          </div>

          <div class="card grid-item animate">
            <svg class="icon">
            <use xlink:href="#nodejs">
          </svg>
            <p class="subtext">
              Node
            </p>
          </div>

          <div class="card grid-item animate">
            <svg class="icon">
            <use xlink:href="#devtools">
          </svg>
            <p class="subtext">
              DevTools
            </p>
          </div>

        </section>

      </section>

      <section id="me">

        <h1 class="animate">
          Me
        </h1>

        <div class="image-container">
          <img class="avatar animate" src="images/avatar.jpg">
        </div>

<!--         <p class="bio">
          I’m a self-taught JavaScript web developer.
          I’ve been writing JavaScript and developing websites since 2012.
          I’m 
        </p> -->

        <section class="stack">

          <a class="stack-item button animate" href="mailto:me@tylereich.com?Subject=Hello%20Tyler">
            <svg class="icon">
              <use xlink:href="#email">
            </svg>
            <p class="label animate">
              Email
            </p>
          </a>

          <a class="stack-item button animate" target="_blank" href="https://twitter.com/eichtyler/">
            <svg class="icon">
              <use xlink:href="#twitter">
            </svg>
            <p class="label animate">
              Twitter
            </p>
          </a>
            
          <a class="stack-item button animate" target="_blank" href="http://stackoverflow.com/users/2892649/tyler-eich">
            <svg class="icon">
              <use xlink:href="#stack-overflow">
            </svg>
            <p class="label animate">
              Stack Overflow
            </p>
          </a>

          <a class="stack-item button animate" target="_blank" href="https://github.com/TylerEich/tylereich.github.io">
            <svg class="icon">
              <use xlink:href="#github">
            </svg>
            <p class="label animate">
              GitHub
            </p>
          </a>

        </section>

      </section><!-- #me -->

