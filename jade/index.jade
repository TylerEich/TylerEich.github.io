          //- a.parallax.screenshot
          //-   +figure( "http://lorempixel.com/1600/900/abstract/4", "Doolittle Electric" )
          //- a.parallax.screenshot
          //-   +figure( "http://lorempixel.com/1600/900/abstract/5", "Elephant Farm" )
          //- .gallery-item
          //-   +figure( "http://lorempixel.com/1600/900/abstract/5", "Your Website Here" )
        section.grid
          a.button.parallax.animate(href='mailto:me@tylereich.com?Subject=Hello%20Tyler&body=Let%27s%20talk%20about%20websites')
            | Ask about websites
          //- .gallery-item
          //-   +figure( "https://dummyimage.com/1600x900&text=Start+your+website", "Elephant Farm" )

      article#code
        h1.animate
          | Code
        h2.animate
          | I do that too
        section.grid
          .card.animate
            +svg-icon('webapp')
            h3 Web Apps
            p
              strong Beyond the basics.
              br
              | Attention to detail and user experience blur the line between native app and website.
          .card.animate
            +svg-icon('server')
            h3 Servers
            p
              strong Behind the scenes.
              br
              | Rock-solid data management systems leverage NodeJS for maximum speed and reliability.
          .card.animate
            +svg-icon('modern')
            h3 Modern
            p
              strong Ahead of the curve.
              br
              | Use the latest tools to optimize workflows, improve performance, and enforce best practices.
          .card.animate
            +svg-icon('checklist')
            h3 Tested
            p
              strong Code with confidence.
              br
              | Automatically check and double-check to avoid embarrasing glitches and errors.
      article#me
        h1.animate
          | Me
        .image-container
          img.avatar.animate(src='images/avatar.jpg')
        //- section
        //-   p I'm a 
        section.stack
          a.button.animate(href='mailto:me@tylereich.com?Subject=Hello%20Tyler')
            +svg-icon('email')
            p.label.animate
              | Email
          a.button.animate(target='_blank', href='https://twitter.com/eichtyler/')
            +svg-icon('twitter')
            p.label.animate
              | Twitter
          a.button.animate(target='_blank', href='http://stackoverflow.com/users/2892649/tyler-eich')
            +svg-icon('stack-overflow')
            p.label.animate
              | Stack Overflow
          a.button.animate(target='_blank', href='https://github.com/TylerEich/tylereich.github.io')
            +svg-icon('github')
            p.label.animate
              | GitHub
      footer
        a(href="https://github.com/TylerEich/tylereich.github.io")
