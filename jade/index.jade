doctype html
html(lang="en")
  include partials/head
  body
    <link href='https://fonts.googleapis.com/css?family=Ubuntu:300,400,500' rel='stylesheet' type='text/css'>
    <link href="https://s3-us-west-2.amazonaws.com/pesticide/1.2.0/pesticide.min.css">
    
    include partials/svg-symbols
    mixin svg-icon( id )
      svg.icon
        use(xlink:href=`#${id}`)
    mixin figure( url, caption )
      figure.animate
        img.loading(src="#{url}", alt="#{caption}", onload="this.classList.toggle( 'loading' )")
        figcaption= caption
    
    header.hide
      nav.animate
        a.link.animate(href='#landing')
          img#logo(src='images/logo.svg')
        a.link.no-touch(href='#websites') Websites
        a.link.no-touch(href='#code') Code
        a.link.no-touch(href='#me') Me
    
    article#landing
      section#greeting
        span#hello-world &ZeroWidthSpace;
        span#tyler-eich.hide I&rsquo;m Tyler Eich
      .ellipse
    
    main#content
      article#websites
        h1.animate
          | Websites
        h2.animate
          | I make them
        //- h2.animate
        //-   | I make them
        section.grid
          .card.animate
            +svg-icon('responsive')
            h3 Responsive
            p
              strong Designed to adapt.
              br
              | Visitors can expect a first-class experience regardless of what device they're using.
          .card.animate
            +svg-icon('fast')
            h3 Fast
            p 
              strong Milliseconds matter.
              br
              | Hold attention and improve user experience with performant, optimized architecture.
          .card.animate
            +svg-icon('clean')
            h3 Clean
            p
              strong Content is king.
              br
              | Thoughtful designs focus attention on the message, not the surrounding layout.
          .card.animate
            +svg-icon('search')
            h3 Discoverable
            p
              strong Built to be found.
              br
              | Extra information behind the scenes helps search engines know where to look.
        h2.animate
          | Sites I&rsquo;ve built
        section.gallery
          a.parallax.screenshot(href="http://yourmovementmatters.com")
            +figure( "http://cl.ly/3H3T3T1Y0U2r/Image%202016-05-02%20at%203.21.22%20PM.png", "Movement Matters" )
          //- a.parallax.screenshot
