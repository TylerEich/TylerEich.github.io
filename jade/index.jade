doctype html
html(lang='en')
	head
		include partials/head-content

	body
		include partials/svg-symbols
		mixin svg-icon( id )
			svg.icon
				use(xlink:href='##{id}')
		mixin screenshot( href, src, caption )
			.screenshot-container
				.screenshot.reveal
					figure
						a(href=href)
							img.loading(src=src, alt=caption, onload='this.classList.toggle( "loading" )')
						figcaption
							a(href=href)
								.site-title= caption
							block
		
		include partials/header

		article#landing
			section#greeting
				span#hello-world &ZeroWidthSpace;
				span#tyler-eich.hide I&rsquo;m Tyler Eich
			.ellipse
		
		main#content
			article#websites
				h1.reveal
					| Websites
				//- h2.reveal
					| I make them
				section.grid
					.card.reveal
						+svg-icon('responsive')
						h3 Responsive
						p
							strong Designed to adapt
							br
							| Visitors can expect a first-class experience regardless of what device they&rsquo;re using
					.card.reveal
						+svg-icon('fast')
						h3 Fast
						p 
							strong Milliseconds matter
							br
							| Hold attention and improve user experience with performant, optimized architecture
					.card.reveal
						+svg-icon('clean')
						h3 Clean
						p
							strong Content is king
							br
							| Thoughtful designs focus attention on the message, not the surrounding layout
					.card.reveal
						+svg-icon('search')
						h3 Discoverable
						p
							strong Built to be found
							br
							| Extra information behind the scenes helps search engines know where to look
				h2.reveal
					| Sites I&rsquo;ve built
				section.gallery
					+screenshot( 'https://doolittle.enterprises', 'images/screenshots/doolittle-enterprises/small.png', 'Doolittle Enterprises' )
						a(href='https://localeye.co')
							.attribution Local Eye Design
						//- p.site-description
							| Construction and remodelling company with a focus on professionalism and customer satisfaction
					+screenshot( 'http://yourmovementmatters.com', 'images/screenshots/yourmovementmatters-com/small.png', 'Movement Matters' )
						//- p.site-description
							| Motor therapy and recovery services for patients with limited mobility or special needs
						a(href='https://localeye.co')
							.attribution Local Eye Design
				section.grid
					a.button.reveal(href='mailto:me@tylereich.com?Subject=Hello%20Tyler&body=Let%27s%20talk%20about%20websites')
						| Ask about websites

			article#code
				h1.reveal
					| Code
				//- h2.reveal
					| I do that too
				section.grid
					.card.reveal
						+svg-icon('webapp')
						h3 Web Apps
						p
							strong Beyond the basics
							br
							| Attention to detail and user experience blur the line between native app and website
					.card.reveal
						+svg-icon('server')
						h3 Servers
						p
							strong Behind the scenes
							br
							| Rock-solid data management systems leverage NodeJS for maximum speed and reliability
					.card.reveal
						+svg-icon('modern')
						h3 Modern
						p
							strong Ahead of the curve
							br
							| Use the latest tools to optimize workflows, improve performance, and enforce best practices
					.card.reveal
						+svg-icon('checklist')
						h3 Tested
						p
							strong Code with confidence
							br
							| Automatically check and double-check to avoid embarrasing glitches and errors
				section.grid
					a.button.reveal(href='mailto:me@tylereich.com?Subject=Hello%20Tyler&body=Let%27s%20talk%20about%20code')
						| Ask about code

			article#me
				h1.reveal
					| Me
				.image-container
					img.avatar.reveal(src='images/avatar.jpg')
				section.bio
					p I'm a freelance web developer. My code is easy for humans to read and fast for computers to crunch. I automate as much as possible to maintain high standards for software quailty.
				section.stack
					a.button.reveal(href='mailto:Tyler%20Eich<me@tylereich.com>?Subject=Hello%20Tyler')
						+svg-icon('email')
						p.label.reveal
							| Email
					a.button.reveal(target='_blank', href='https://twitter.com/eichtyler/')
						+svg-icon('twitter')
						p.label.reveal
							| Twitter
					a.button.reveal(target='_blank', href='http://stackoverflow.com/users/2892649/tyler-eich')
						+svg-icon('stack-overflow')
						p.label.reveal
							| Stack Overflow
					a.button.reveal(target='_blank', href='https://github.com/TylerEich/tylereich.github.io')
						+svg-icon('github')
						p.label.reveal
							| GitHub
			footer
				p Copyright Â© 2016 Tyler Eich
				a(href='https://github.com/TylerEich/tylereich.github.io')
					| Hosted with #[+svg-icon('heart')] by GitHub
			
		include partials/scripts
