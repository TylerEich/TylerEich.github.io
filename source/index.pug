doctype html
html(lang='en')
	head
		include partials/html-head.pug

	body.bg-white.color-black
		//- include partials/svg-symbols.pug
		include icons/index.svg

		mixin svg-icon(id)
			svg.fit.icon.block.fill-white
				use(xlink:href=`#${id}`)

		mixin screenshot(url, title, directory)
			.sm-col-6.mt3.px2
				picture
					source(srcset=`images/screenshots/${directory}/tablet.png` media='(min-width: 30rem) and (max-width: 52rem)' width='768' height='576')
					source(srcset=`images/screenshots/${directory}/desktop.png` media='(min-width: 52rem)' width='960' height='600')
					img.block.fit.rounded.overflow-hidden(src=`images/screenshots/${directory}/mobile.png`, alt=`${title} website preview` width='750' height='750')
				h2.mt1.h2
					a(href=url).link= title
				block

		mixin via(url, title)
			p.h5.color-gray.mt1 Via	#[a(href=url).color-black.link= title]


		.bg-gradient-1.color-white
			.max-width-4.mx-auto.px2.pb3.sm-pb4
				.flex.flex-wrap.mxn2
					.col-12.sm-col-6.px2.mt3.sm-mt4.relative
						picture
							//- source(srcset='images/new-logo-wide.svg' media='(min-width: 40rem)')
							img(src='images/new-logo.svg' style='height: 100%;').block.fit.sm-absolute
					.col-12.sm-col-6.px2.mt3.sm-mt4
						.mt0
							h1 Tyler&nbsp;Eich
							p.h2.mt1 Web Developer
						p.mt3
							a(href='#contact').inline-block.button.h2.py1.px2 I want a website

		.bg-white
			.max-width-4.mx-auto.py3.px2.sm-py4
				h1.bold.caps.h2
					| Portfolio
				.flex.flex-wrap.mxn2
					+screenshot(
							'http://childrenshopefw.org/',
							'Mad Anthonys Childrenʼs Hope House',
							'childrenshopefw-org')
						+via(
								'https://www.crownjewelpro.com',
								'Crown Jewel Marketing')

					+screenshot(
							'https://doolittle.enterprises',
							'Doolittle Enterprises',
							'doolittle-enterprises')
						+via(
								'https://localeye.co',
								'Local Eye Design')

					+screenshot(
							'http://yourmovementmatters.com',
							'Movement Matters',
							'yourmovementmatters-com')
						+via(
								'https://localeye.co',
								'Local Eye Design')

		.bg-gradient-2
			.max-width-4.mx-auto.px2.py3.sm-py4.color-white
				h1.bold.caps.h2 Skills
				//- h2
					| I make them
				section.flex.flex-wrap.mxn2
					.sm-col-6.mt3.px2
						+svg-icon('devices')
						h2.mt1 Responsive Layout
						p.mt1 Visitors can expect a first-class experience regardless of what device they&rsquo;re using
					.sm-col-6.mt3.px2
						+svg-icon('network_check')
						h2.mt1 Fast Pages
						p.mt1 Hold attention and improve user experience with performant, optimized architecture
					.sm-col-6.mt3.px2
						+svg-icon('web')
						h2.mt1 Clean Structure
						p.mt1 Thoughtful designs focus attention on the message, not the surrounding layout
					.sm-col-6.mt3.px2
						+svg-icon('touch_app')
						h2.mt1 Rich interactions
						p.mt1 Careful scripting and considered animations add a new layer of interaction to a static design
					.sm-col-6.mt3.px2
						+svg-icon('search')
						h2.mt1 Discoverable Content
						p.mt1 Extra information behind the scenes helps search engines know where to look
					.sm-col-6.mt3.px2
						+svg-icon('accessibility')
						h2.mt1 Accessible Markup
						p.mt1 Annotated codebases provide the best possible experience for users of all abilities

		#contact.bg-white
			.max-width-4.mx-auto.px2.py3.sm-py4
				h1.bold.caps.h2 Contact
				form(action='https://formspree.io/me@tylereich.com' method='POST').flex.flex-wrap.mxn2
					.col-12.sm-col-6.px2
						label.mt3.color-gray.block Name
						input(type='text' name='name').mt1.input
					.col-12.sm-col-6.px2
						label.mt3.color-gray.block Email
						input(type='email' name='email').mt1.input
					.col-12.px2
						label.mt3.color-gray.block Message
						textarea(rows='4' name='message').mt1.textarea
					input(type='hidden' name='_next' value='http://tylereich-com.s3-website-us-east-1.amazonaws.com/thanks.html')
					.col-12.px2
						input(type='submit' value='Send message').button.mt3.h3.py1.px2

		.p0.bg-gradient-black
			.max-width-4.mx-auto.py2.px2
				p.h6.color-gray.my1 Copyright © 2016 Tyler&nbsp;Eich
				p.h6.color-gray.my1 Iconography by #[a(href='https://material.io/icons/') Material&nbsp;Icons]
